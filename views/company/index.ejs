<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/companyIndex.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <script  src="/js/jquery.js"></script> 
    <script src="/js/bootstrap.min.js"></script>
</head>
<body>
    
    <%- include('../partials/navbar')  %>

   <div class="row d-flex justify-content-center mt-5">
  <div class="col-9 d-flex justify-content-end">
    <a href="/company/add"> 
      <button type="button" class="btn btn-success rounded-pill" >Add Drive</button>
    </a>
    
  </div>
</div>

  <div class="row d-flex justify-content-center">
    <div class="col-9 mt-5">
     <div class="driveHeading"> Ongoing Drives </div>
    <% for(let company of activeCompaniesList){ %>
        <div class="card mt-3">
            <h5 class="card-header"> <%= company.name %> </h5>
            <div class="card-body">
              <h5 class="card-title"> <%= company.role %> </h5>
              <p class="card-text"><%- company.description %></p>
              <a href="/company/<%= company._id %>" class="btn btn-primary">view</a>
            </div>
          </div>
    <% } %>

    <div class="driveHeading"> Past Drives </div>
    
    <% for(let company of pastCompaniesList){ %>
      <div class="card mt-3">
          <h5 class="card-header"> <%= company.name %> </h5>
          <div class="card-body">
            <h5 class="card-title"> <%= company.role %> </h5>
            <p class="card-text"><%- company.description %></p>
            <a href="/company/<%= company._id %>" class="btn btn-primary">view</a>
          </div>
        </div>
  <% } %>

    </div>

  </div>

</body>
</html>