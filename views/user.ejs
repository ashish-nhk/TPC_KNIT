<%- include('partials/header') %>

    <%- include('partials/navbar') %>
    <%- include('partials/flash') %>
        <div class="container">
            <div class="profile-header">
                <!-- Student Information -->
                <div class="profile-details">
                    <h2>
                        <%= currentUser.name %>
                    </h2>
                    <p>
                        <%= currentUser.email %>
                    </p>
                    <!-- Add more student information here -->
                </div>
            </div>
            <hr>
            <!-- Courses and Grades -->
            <div class="details">
                <h3>Details</h3>
                <table class="table">
                    <thead>
                        <tr>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Roll Number</td>
                            <td>
                                <%= currentUser.rollNo %>
                            </td>
                        </tr>
                        <tr>
                            <td>Course</td>
                            <td>
                                <%= currentUser.course %>
                            </td>
                        </tr>
                        <tr>
                            <td>Branch</td>
                            <td>
                                <%= currentUser.branch %>
                            </td>
                        </tr>
                        <tr>
                            <td>Start Year</td>
                            <td>
                                <%= currentUser.startYear %>
                            </td>
                        </tr>

                        <tr>
                            <td>End Year</td>
                            <td>
                                <%= currentUser.endYear %>
                            </td>
                        </tr>

                        <tr>
                            <td>Contact Number</td>
                            <td>
                                <%= currentUser.contactNumber %>
                            </td>
                        </tr>
                        <tr>
                            <td>Date of Birth</td>
                            <td>
                                <%= currentUser.dob %>
                            </td>
                        </tr>

                    </tbody>
                </table>
            </div>
        </div>


        </body>

        </html>